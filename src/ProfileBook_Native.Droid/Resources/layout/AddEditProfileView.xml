<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/prfile_image_button"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_marginTop="20dp"
		android:scaleType="centerCrop"
		android:src="@drawable/pic_profile"
		android:backgroundTint="@android:color/transparent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:MvxBind="Click ProfileImageTappedCommand"/>

	<EditText
		android:id="@+id/profile_nickname_edit_text"
        android:layout_width="match_parent"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/prfile_image_button"
		android:layout_marginTop="30dp"
		android:inputType="text"
		app:MvxBind="Text CurrentProfile.NickName"/>

	<EditText
		android:id="@+id/profile_name_edit_text"
        android:layout_width="match_parent"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/profile_nickname_edit_text"
		android:layout_marginTop="20dp"
		android:inputType="text"
		app:MvxBind="Text CurrentProfile.Name"/>

	<EditText
		android:id="@+id/profile_description_edit_text"
        android:layout_width="match_parent"
		android:layout_height="0dip"
		android:gravity="top"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		app:layout_constraintTop_toBottomOf="@id/profile_name_edit_text"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginTop="30dp"
		android:layout_marginBottom="30dp"
		android:inputType="textMultiLine"
		app:MvxBind="Text CurrentProfile.Description"/>

</androidx.constraintlayout.widget.ConstraintLayout>
