<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true">

	<TextView
		android:id="@+id/sort_by_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textSize="20dp"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="30dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<RadioGroup
		android:id="@+id/sort_radio_group"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/sort_by_text_view"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="10dp"
		android:checkedButton="@id/date_radio_button">

		<RadioButton
			android:id="@+id/date_radio_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<RadioButton
			android:id="@+id/name_radio_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<RadioButton
			android:id="@+id/nickname_radio_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</RadioGroup>

	<CheckBox
		android:id="@+id/dark_theme_check_box"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/sort_radio_group"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="20dp"/>

	<TextView
		android:id="@+id/languages_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/dark_theme_check_box"
		app:layout_constraintLeft_toLeftOf="parent"
		android:textSize="20dp"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="30dp"/>

	<NumberPicker
		android:id="@+id/languages_number_picker"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/languages_text_view"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
